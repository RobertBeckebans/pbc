if(NOT GLFW_PACKAGE_DIR)
	message("ERROR: GLFW_PACKAGE_DIR requires to be set")
endif(NOT GLFW_PACKAGE_DIR)

if(MSVC AND NOT CMAKE_CL_64)
	set(BINARY_DIRECTORY "win32-vc")
endif(MSVC AND NOT CMAKE_CL_64)

if(MSVC AND CMAKE_CL_64)
	set(BINARY_DIRECTORY "win64-vc")
endif(MSVC AND CMAKE_CL_64)

set(GLFW_INCLUDE_DIR ${GLFW_PACKAGE_DIR}/include)
set(GLFW_LIBRARY_DIR ${GLFW_PACKAGE_DIR}/lib/${BINARY_DIRECTORY})
set(GLFW_LIBRARY glfw3)

include_directories(${GLFW_INCLUDE_DIR})
link_directories(${GLFW_LIBRARY_DIR})

if(GLFW_LIBRARY AND GLFW_LIBRARY_DIR AND GLFW_INCLUDE_DIR)
	set(GLFW_FOUND "YES")
endif()
